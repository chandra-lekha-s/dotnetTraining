@model IEnumerable<EmployeeManagement.Models.WorkingHour>

<h2>Working Hours</h2>

<p>
    <a class="btn btn-primary" href="@Url.Action("Create")">Create New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CompanyMonthlyWorkingHour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeMonthlyWorkingHour)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyMonthlyWorkingHour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeMonthlyWorkingHour)
                </td>
                <td>
                    <a class="btn btn-primary" href="@Url.Action("Edit", new { id = item.Id })">Edit</a>
                    <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
