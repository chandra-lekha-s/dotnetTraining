@model IEnumerable<EmployeeManagement.Models.Employee>
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Employee List</h2>
        </div>
        <div class="col-6 text-end">
            <p>
                <a class="btn btn-primary" asp-action="Create">Create New</a>
            </p>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Designation</th>
                <th>Payment Rule</th>
                <th>Working Hour</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>@employee.Designation.Name</td>
                    <td>@employee.PaymentRule.RuleName</td>
                    <td>@employee.WorkingHour.EmployeeMonthlyWorkingHour</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@employee.Id">Edit</a>
                        <a class="btn btn-primary" asp-action="Delete" asp-route-id="@employee.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
